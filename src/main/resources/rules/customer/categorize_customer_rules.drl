package rules.customer

import com.example.model.Customer
import com.example.enums.CustomerCategory

dialect "mvel"

rule "Bronze Category"
    when
        $c : Customer( totalSpent < 5000 )
    then
        $c.setCategory(CustomerCategory.BRONZE);
        System.out.println("[RULE] Assigned BRONZE category");
end

rule "Silver Category"
    when
        $c : Customer( totalSpent >= 5000 && totalSpent < 15000 )
    then
        $c.setCategory(CustomerCategory.SILVER);
        System.out.println("[RULE] Assigned SILVER category");
end

rule "Gold Category"
    when
        $c : Customer( totalSpent >= 15000 && totalSpent < 30000 )
    then
        $c.setCategory(CustomerCategory.GOLD);
        System.out.println("[RULE] Assigned GOLD category");
end

rule "Platinum Category"
    when
        $c : Customer( totalSpent >= 30000 )
    then
        $c.setCategory(CustomerCategory.PLATINUM);
        System.out.println("[RULE] Assigned PLATINUM category");
end
